{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": true,
        "ignore": ["coverage/**/*", "**/node_modules/**", "dist/**/*"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useConsistentArrayType": "error",
                "useNamingConvention": "error"
            },
            "suspicious": {
                "noExplicitAny": "warn"
            },
            "correctness": {
                "useExhaustiveDependencies": "error"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "trailingCommas": "all",
            "semicolons": "asNeeded"
        }
    },
    "json": {
        "parser": {
            "allowComments": true
        }
    }
}
